{
   "compilerOptions": {
      "outDir": "./dist/",
     "removeComments": true,
     "baseUrl": ".",
      "jsx": "react",
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "allowJs": true,
      "sourceMap": true,
      "importHelpers": true,
      "noEmitHelpers": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": [
         "es5",
         "dom"
      ]
   },
   "files": ["src/index.tsx"],
   "exclude": ["dist", "lab", "node_modules"]
}
